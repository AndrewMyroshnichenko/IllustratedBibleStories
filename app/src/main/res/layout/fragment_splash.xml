<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_background"
    tools:context=".ui.screens.splash.SplashFragment">

    <TextView
        android:id="@+id/tv_splash_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/illustrated"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="96dp"
        style="@style/SplashTwinkleStarFont"/>

    <TextView
        android:id="@+id/tv_splash_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bible_stories"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:layout_marginTop="8dp"
        style="@style/SplashSofiaSansBoldFont"/>


</LinearLayout>